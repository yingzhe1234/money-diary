generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id         String   @id @default(uuid()) @db.Uuid
  occurredAt DateTime
  amountCents Int
  currency   String   @default("USD")
  merchantRaw String
  category   String
  note       String?
  createdAt  DateTime @default(now())

  @@index([occurredAt])
  @@index([category])
  @@index([merchantRaw])
  @@map("transactions")
}
